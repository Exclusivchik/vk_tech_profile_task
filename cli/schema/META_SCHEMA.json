{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "kind": {
            "type": "string",
            "maxLength": 32,
            "const": ""
        },
        "name": {
            "type": "string",
            "maxLength": 128
        },
        "description": {
            "type": "string",
            "maxLength": 4096
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "configuration": {
            "type": "object",
            "properties": {
                "specification": {
                    "type": "object",
                    "additionalProperties": true
                },
                "settings": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["kind", "name", "description", "configuration"],
    "additionalProperties": false
}
